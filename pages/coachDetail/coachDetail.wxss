/* pages/coachDetail/coachDetail.wxss */
page {
  background-color: #f5f5f5;
}

.coachDetailView .coachInfo {
  padding: 28rpx 20rpx;
}

.coachDetailView .coachInfo>image {
  width: 140rpx;
  height: 147rpx;
  border-radius: 6rpx;
  margin-right: 26rpx;
}

.coachDetailView .coachInfo .detailInfo {
  flex: 1;
}

.coachDetailView .coachInfo .detailInfo .name {
  font-size: 30rpx;
  color: #333333;
  font-weight: 700;
}

.coachDetailView .coachInfo .detailInfo .desc {
  font-size: 24rpx;
  color: #BABABA;
  margin-bottom: 13rpx;
  margin-top: 6rpx;
}

.coachDetailView .coachInfo .detailInfo .desc .cuIcon-right {
  font-size: 34rpx;
}

.coachDetailView .coachInfo .detailInfo .num {
  color: #fff;
  font-size: 24rpx;
  height: 34rpx;
  border-radius: 17rpx;
  padding: 0 8rpx;
  display: inline-block;
  background-color: #E07865;
}

.coachDetailView .coachInfo .detailInfo .num image {
  width: 27rpx;
  height: 27rpx;
  margin-right: 10rpx;
}

.section {
  margin-top: 16rpx;
  padding-bottom: 25rpx;
}

.sectionTitle {
  padding-left: 45rpx;
  padding-right: 22rpx;
  position: relative;
  font-size: 32rpx;
  color: #343434;
  font-weight: 700;
  /* border-bottom: 1rpx solid #EEEEEE; */
  line-height: 80rpx;
}

.sectionTitle::after {
  position: absolute;
  left: 22rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 28rpx;
  content: '';
  background: linear-gradient(180deg, #FF6E6E, #FF3736);
  border-radius: 4rpx;
}

.sectionTitle .btn {
  width: 130rpx;
  height: 40rpx;
  line-height: 40rpx;
  border: 1rpx solid #C6C6C6;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #9A9A9A;
}


.sv {
  height: 140rpx;
  padding: 0 23rpx;
  /* margin-top: 36rpx; */
  white-space: nowrap;
}

.sv .item {
  width: 212rpx;
  height: 100%;
  border-radius: 6rpx;
  overflow: hidden;
  position: relative;
  display: inline-block;
  margin-right: 18rpx;
}

.sv .item image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.locationItem {
  font-size: 26rpx;
  font-weight: 400;
  color: #888888;
  padding-left: 45rpx;
  margin-bottom: 10rpx;
}

.locationItem image{
  width: 16rpx;
  height: 22rpx;
  margin-right: 5rpx;
}
.evaluateItem   {
  padding: 42rpx 22rpx 24rpx 22rpx;
}
.evaluateItem > image{
  width: 66rpx;
  height: 66rpx;
  border-radius: 50%;
}
.evaluateItem .evaluateInfo {
  flex: 1;
  margin-left: 22rpx;
}
.evaluateItem .evaluateInfo  .name{
font-size: 30rpx;
font-weight: 400;
color: #333333;
}
.evaluateItem .evaluateInfo  .type{
font-size: 22rpx;
font-weight: 400;
color: #727272;
margin-top: 10rpx;
margin-bottom: 14rpx;
margin-right: 29rpx;
}
.evaluateItem .evaluateInfo  .scores{
font-size: 24rpx;
font-weight: 400;
color: #7E7E7E;
margin-left: 4rpx;
}
.evaluateItem .evaluateInfo  .date{
font-size: 24rpx;
font-weight: 400;
color: #C9C9C9;
}
.evaluateItem .evaluateInfo .start{
  width: 16rpx;
  height: 16rpx;
  margin-right: 8rpx;
}
.evaluateItem .evaluateInfo  .text{
font-size: 28rpx;
font-weight: 400;
color: #848484;
}
