/* pages/coachList/coachList.wxss */
page {
  background-color: #ebd5c8;
}

.coachListView {
  padding: 48rpx 22rpx 22rpx 22rpx;
}

.menuBox {
  height: 48rpx;
  padding: 0 22rpx;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  background-color: #ebd5c8;
  z-index: 99;
}

.locationBox {
  position: relative;
}

.locationBox .label {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
}

.locationBox .cuIcon-unfold {
  color: #929292;
  margin-left: 19rpx;
}

.locationBox picker {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.filterBox {
  color: #E43F3F;
}

.filterBox .label {
  margin-right: 9rpx;
  font-size: 26rpx;
}

.shopItem {
  padding: 28rpx 20rpx;
  border-radius: 16rpx;
  margin-top: 22rpx;
}

.shopItem>image {
  width: 140rpx;
  height: 147rpx;
  border-radius: 10rpx;
  margin-right: 26rpx;
}

.shopItem .shopInfo {
  flex: 1;
}

.shopItem .shopInfo .name {
  font-size: 30rpx;
  color: #333333;
  font-weight: 700;
}

.shopItem .shopInfo .desc {
  font-size: 24rpx;
  color: #BABABA;
  margin-bottom: 13rpx;
  margin-top: 6rpx;
}

.shopItem .shopInfo .desc .cuIcon-right {
  font-size: 34rpx;
}

.shopItem .shopInfo .num {
  color: #fff;
  font-size: 24rpx;
  height: 34rpx;
  border-radius: 17rpx;
  padding: 0 8rpx;
  display: inline-block;
  background-color: #E07865;
}

.shopItem .shopInfo .num image {
  width: 27rpx;
  height: 27rpx;
  margin-right: 10rpx;
}