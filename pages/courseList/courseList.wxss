/* pages/courseList/courseList.wxss */
.sectionTitle {
  padding-left: 45rpx;
  padding-right: 22rpx;
  position: relative;
  font-size: 32rpx;
  color: #343434;
  font-weight: 700;
  /* border-bottom: 1rpx solid #EEEEEE; */
  line-height: 80rpx;
}

.sectionTitle::after {
  position: absolute;
  left: 22rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 28rpx;
  content: '';
  background: linear-gradient(180deg, #FF6E6E, #FF3736);
  border-radius: 4rpx;
}

.sectionTitle .chooseLocation {
  font-size: 28rpx;
  font-weight: 400;
  color: #A2A2A2;
}

.sectionTitle .chooseLocation .cuIcon-unfold {
  font-size: 20rpx;
  margin-left: 10rpx;
}

.courseListView .menuBox {
  padding: 44rpx 0 34rpx 0;
}

.courseListView .menuBox .item {
  flex: 1;
  font-size: 28rpx;
  color: #8E8E8E;
}

.courseListView .menuBox .item .icon {
  width: 100%;
  height: 52rpx;
  margin-bottom: 24rpx;
}

.courseListView .menuBox .item .icon image {
  width: 34rpx;
}

.listBox {
  margin-top: 14rpx;
}

.listBox .chooseLocation {
  position: relative;
}

.listBox picker {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.listBox .item {
  position: relative;
  margin: 0 22rpx;
  margin-top: 18rpx;
  color: #fff;
  height: 244rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.listBox .item .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.listBox .item .info {
  position: absolute;
  left: 22rpx;
  top: 33rpx;
}

.listBox .item .info .cName {
  font-size: 38rpx;
  font-weight: 500;
  color: #FFFFFF;
  margin-left: 8rpx;
  margin-bottom: 36rpx;
}

.listBox .item .info .head {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 13rpx;
}

.listBox .item .info .head image {
  width: 100%;
  height: 100%;
}
.listBox .item .info .price{
margin-top: 26rpx;
}