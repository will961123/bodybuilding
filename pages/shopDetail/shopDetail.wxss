/* pages/shopDetail/shopDetail.wxss */
.sectionTitle {
  padding-left: 46rpx;
  padding-right: 22rpx;
  position: relative;
  font-size: 32rpx;
  color: #343434;
  font-weight: 700;
  /* border-bottom: 1rpx solid #EEEEEE; */
  line-height: 80rpx;
}

.sectionTitle::after {
  position: absolute;
  left: 22rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 28rpx;
  content: '';
  background: linear-gradient(180deg, #FF6E6E, #FF3736);
  border-radius: 4rpx;
}

page {
  background-color: #f5f5f5;
}

.section {
  margin-top: 14rpx;
  padding-bottom: 37rpx;
}

.shopDetailView .topBg {
  width: 100%;
}

.shopDetailView .shopInfoBox {
  padding: 64rpx 22rpx 24rpx 22rpx;
  border-radius: 22rpx 22rpx 0px 0px;
  margin-top: -18rpx;
  position: relative;
}

.shopDetailView .shopInfoBox .name {
  font-size: 33rpx;
  font-weight: bold;
  color: #343434;
}

.shopDetailView .shopInfoBox .address {
  font-size: 27rpx;
  font-weight: 400;
  color: #888888;
  margin-top: 25rpx;
  margin-bottom: 38rpx;
}

.shopDetailView .shopInfoBox .address .cuIcon-location {
  color: #55b03c;
  font-weight: 700;
}

.shopDetailView .shopInfoBox .address .km image {
  width: 18rpx;
  height: 18rpx;

}

.shopDetailView .shopInfoBox .joinData .num {
  font-size: 31rpx;
  font-weight: 400;
  color: #343434;
}

.shopDetailView .shopInfoBox .joinData .num image {
  width: 30rpx;
  height: 32rpx;
  margin-right: 5rpx;
}

.shopDetailView .shopInfoBox .joinData .headBox {
  margin-left: 48rpx;
  margin-top: 15rpx;
}

.shopDetailView .shopInfoBox .joinData .headBox image {
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  position: relative;
  margin-left: -15rpx;
}

.section .desc {
  font-size: 29rpx;
  font-weight: 400;
  color: #919191;
  line-height: 1.65em;
  margin: 0 24rpx;
}

.section .desc2 {
  font-size: 25rpx;
  color: #8F8F8F;
  line-height: 37rpx;
  padding: 0 28rpx;
}

.calendarBox {
  margin-top: 14rpx;
  padding-top: 42rpx;
}

.calendar {
  margin-bottom: 54rpx;
}

.calendarBox .item {
  flex: 1;
}

.calendarBox .item .week {
  font-size: 26rpx;
  font-weight: 400;
  color: #B7B7B7;
}

.calendarBox .item .day {
  width: 40rpx;
  height: 40rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #666666;
  line-height: 40rpx;
  text-align: center;
  margin-top: 10rpx;
  border-radius: 50%;
}

.calendarBox .item .day.select {
  background-color: #FF5856;
  color: #fff;
}

.calendarBox .coachItem {
  padding: 0 22rpx 29rpx 22rpx;
}

.calendarBox .coachItem .time {
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
  margin-bottom: 18rpx;
}

.calendarBox .coachItem .time .cuIcon-time {
  margin-right: 6rpx;
}

.calendarBox .coachItem image {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
  margin-right: 27rpx;
}

.calendarBox .coachItem .className {
  font-size: 30rpx;
  font-weight: 400;
  color: #343434;
}

.calendarBox .coachItem .name {
  font-size: 26rpx;
  font-weight: 400;
  color: #A7A7A7;
  margin-top: 10rpx;
}

.calendarBox .coachItem .btn {
  margin: 0;
  padding: 0;
  width: 126rpx;
  height: 46rpx;
  background: linear-gradient(180deg, #FF6E6E, #FF3736);
  border-radius: 4rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 46rpx;
}