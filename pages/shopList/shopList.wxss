/* pages/shopList/shopList.wxss */
.flex1{
  flex: 1;
}
.sectionTitle {
  padding-left: 46rpx;
  padding-right: 22rpx;
  position: relative;
  font-size: 32rpx;
  color: #343434;
  font-weight: 700;
  /* border-bottom: 1rpx solid #EEEEEE; */
  line-height: 80rpx;
}

.sectionTitle::after {
  position: absolute;
  left: 22rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 28rpx;
  content: '';
  background: linear-gradient(180deg, #FF6E6E, #FF3736);
  border-radius: 4rpx;
}
.sectionTitle .location{
color: #787878;
font-size: 24rpx;
margin-left: 30rpx;
}
.sectionTitle .num {
  font-weight: 500;
  color: #787878;
  font-size: 26rpx;
}
page{
  background-color: #f5f5f5;
}
.listBox{
  margin-top: 14rpx;
}
.listBox .item{
  padding: 18rpx 22rpx 22rpx 22rpx;
  border-bottom: 1rpx solid   #E5E5E5;
}
.listBox .item>image{
  width: 211rpx;
  height: 122rpx;
  border-radius: 4rpx;
  margin-right: 22rpx;
}
.listBox .item .name{
font-size: 30rpx;
font-weight: 500;
color: #343434;
}
.listBox .item .km{
font-size: 24rpx;
font-family: PingFang SC;
font-weight: 400;
color: #565656;
}
.listBox .item .km image{
  width: 16rpx;
  height: 16rpx;
  margin-right: 6rpx;
}
.listBox .item .address{
font-weight: 400;
color: #888888;
font-size: 26rpx;
margin-top: 20rpx;
}